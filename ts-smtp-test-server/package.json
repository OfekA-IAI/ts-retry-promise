{
  "name": "ts-smtp-test",
  "version": "1.0.1",
  "license": "MIT",
  "description": "smtp server for integration testing",
  "repository": "https://bitbucket.org/martinmo/ts-tools",
  "bugs": "https://bitbucket.org/martinmo/ts-tools/issues",
  "keywords": [
    "smtp",
    "test",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "main": "dist/smtp-test-server.js",
  "types": "dist/smtp-test-server.d.ts",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "cleanup": "del-cli dist reports",
    "prebuild": "yarn cleanup",
    "build": "tsc",
    "test": "mocha",
    "posttest": "yarn tslint",
    "tslint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "test:coverage": "nyc mocha",
    "validate": "yarn tslint && yarn test:coverage",
    "prerelease": "yarn validate",
    "release": " yarn build && yarn publish"
  },
  "dependencies": {
    "mailparser": "^2.2.0",
    "smtp-server": "^3.4.1",
    "ts-retry-promise": "^0.0.9"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mailparser": "^2.0.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/smtp-server": "^3.3.4",
    "chai": "^4.1.2",
    "del-cli": "^1.1.0",
    "mocha": "^5.0.1",
    "nodemailer": "^4.4.2",
    "nyc": "^11.4.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.0.3",
    "typescript": "^2.7.2"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "reports/coverage"
  }
}
