{
  "name": "ts-smtp-test",
  "version": "0.0.3",
  "license": "MIT",
  "repository": "https://bitbucket.org/martinmo/ts-tools",
  "keywords": [
    "smtp",
    "test",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "directories": {
    "doc": "./dist"
  },
  "scripts": {
    "cleanup": "del-cli dist coverage",
    "prebuild": "yarn cleanup",
    "build": "tsc",
    "test": "mocha",
    "posttest": "yarn tslint",
    "tslint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "test:coverage": "nyc mocha",
    "do-publish": "yarn config set version-tag-prefix smtp-test-server- && yarn build && yarn publish && yarn config delete version-tag-prefix"
  },
  "dependencies": {
    "mailparser": "^2.2.0",
    "smtp-server": "^3.4.1",
    "ts-retry-promise": "^0.0.8"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mailparser": "^2.0.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/smtp-server": "^3.3.4",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "del-cli": "^1.1.0",
    "mocha": "^5.0.1",
    "nodemailer": "^4.4.2",
    "nyc": "^11.4.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.0.3",
    "typescript": "^2.7.2"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
