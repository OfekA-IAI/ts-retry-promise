{
  "name": "ts-tools",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "https://bitbucket.org/martinmo/ts-tools",
  "scripts": {
    "cleanup": "lerna exec -- del-cli dist node_modules reports .nyc_output",
    "bootstrap": "lerna bootstrap",
    "validate": "lerna run validate",
    "build": "lerna run build",
    "full-build": "yarn bootstrap && yarn build && yarn validate",
    "updated": "lerna updated",
    "pretest-release": "yarn full-build && yarn build",
    "test-release": "lerna publish --cd-version prepatch --npm-tag=next"
  },
  "devDependencies": {
    "del-cli": "^1.1.0",
    "lerna": "^2.9.0"
  }
}
