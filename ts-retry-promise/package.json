{
  "name": "ts-retry-promise",
  "version": "0.0.5-PRERELEASE",
  "license": "MIT",
  "repository": "https://bitbucket.org/martinmo/ts-tools",
  "keywords": [
    "promise",
    "retry",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "./dist"
  },
  "scripts": {
    "cleanup": "del-cli dist coverage",
    "prebuild": "yarn cleanup",
    "build": "tsc && cpx ../LICENSE.txt ./dist && cpx ../README.md ./dist && cpx package.json ./dist",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "do-publish": "yarn build && yarn publish"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.6",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "del-cli": "^1.1.0",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
